print( b.shape )
print( b.ndim )
print( b.dtype )
print( b )

# print( help( np.arange ) )
print( np.abs( b ) )                   # 절대값
print( np.sqrt( np.abs( b ) ) )        # 제곱근
print( np.square( b ) )                # 제곱
print( np.isnan( b ) )                 # NaN 여부
print( np.sum( b ) )                   # 합계
print( np.mean( b ) )                  # 평균
print( np.max( b ) )                   # 최대값
print( np.min( b ) )                   # 최소값
