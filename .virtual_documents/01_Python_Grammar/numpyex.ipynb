print( np.argmin( b ) )                # 최소값 인덱스
print( np.sort( b ) )                  # 정렬 오름차순
print( np.sort( b )[::-1] )            # 정렬 내림차순      [start : end : step]
print( np.median( b ) )                # 중간값


